{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CODEX Manifest v0.1",
  "type": "object",
  "required": ["spec_version", "uuid", "meta", "sources", "layers"],
  "additionalProperties": true,
  "definitions": {
    "digest": {
      "type": "string",
      "pattern": "^sha256:[A-Fa-f0-9]{64}$"
    },
    "functionSpec": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": true,
      "properties": {
        "name": { "type": "string" },
        "id": { "type": "string" },
        "description": { "type": "string" },
        "model": { "type": "string" },
        "encoding": { "type": "string" },
        "mode": { "type": "string" },
        "parameters": { "type": "object" },
        "notes": { "type": "string" }
      }
    },
    "modificationHistoryEntry": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "checked_at": { "type": "string", "format": "date-time" },
        "observed_digest": { "$ref": "#/definitions/digest" },
        "observed_size": { "type": "integer", "minimum": 0 },
        "expected_hash": { "$ref": "#/definitions/digest" },
        "expected_digest": { "$ref": "#/definitions/digest" },
        "status": { "type": "string", "enum": ["clean", "drifted", "unknown"] },
        "notes": { "type": "string" }
      }
    }
  },
  "properties": {
    "spec_version": {
      "type": "string",
      "pattern": "^0\\.1\\.\\d+$"
    },
    "uuid": {
      "type": "string",
      "format": "uuid"
    },
    "meta": {
      "type": "object",
      "required": ["name", "version", "state"],
      "additionalProperties": true,
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "state": { "type": "string", "enum": ["lite", "dense"] },
        "description": { "type": "string" },
        "category": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "author": { "type": "string" },
        "created_by": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "archived_at": { "type": "string", "format": "date-time" }
      }
    },
    "provenance": {
      "type": "object",
      "required": [],
      "additionalProperties": true,
      "properties": {
        "tool": { "type": "string" },
        "version": { "type": "string" },
        "generated_at": { "type": "string", "format": "date-time" },
        "profile": { "type": "string" },
        "logic": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "ai_model": { "type": "string" },
            "prompts": {
              "type": "array",
              "items": { "type": "string" }
            },
            "parameters": { "type": "object" }
          }
        }
      }
    },
    "instructions": {
      "type": "object",
      "required": [],
      "additionalProperties": true,
      "properties": {
        "usage": { "type": "string" },
        "system_prompt_hint": { "type": "string" },
        "layer_logic": { "type": "string" },
        "bootstrap_hint": { "type": "string" }
      }
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "uri", "hash", "size_bytes"],
        "additionalProperties": true,
        "properties": {
          "id": { "type": "string" },
          "uri": {
            "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } }
            ]
          },
          "type": { "type": "string", "default": "text/plain" },
          "hash": { "$ref": "#/definitions/digest" },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "content": { "type": ["string", "null"] },
          "encoding": { "type": "string" },
          "expected_digest": { "$ref": "#/definitions/digest" },
          "modification_status": { "type": "string", "enum": ["clean", "drifted", "unknown"] },
          "modification_history": {
            "type": "array",
            "items": { "$ref": "#/definitions/modificationHistoryEntry" }
          },
          "curation": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "exclusions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["start", "end", "reason"],
                  "additionalProperties": true,
                  "properties": {
                    "start": { "type": "integer", "minimum": 0 },
                    "end": { "type": "integer", "minimum": 0 },
                    "reason": { "type": "string" },
                    "detection_method": { "type": "string" },
                    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
                  }
                }
              }
            }
          },
          "notes": { "type": "string" }
        }
      }
    },
    "layers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "name"],
        "additionalProperties": true,
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["persona", "analysis", "visuals"] },
          "name": { "type": "string" },
          "base_model_hint": { "type": "string" },
          "recommended_models": { "type": "array", "items": { "type": "string" } },
          "system_prompt": { "type": "string" },
          "context_sources": { "type": "array", "items": { "type": "string" } },
          "parameters": { "type": "object" },
          "voice": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "model": { "type": "string" },
              "source": { "type": "string", "format": "uri" },
              "hf_repo": { "type": "string" },
              "speed": { "type": "number" },
              "pitch": { "type": "number" }
            }
          },
          "tags": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "version": { "type": "string" },
          "date": { "type": "string", "format": "date-time" },
          "action": { "type": "string" },
          "actor": { "type": "string" },
          "notes": { "type": "string" }
        }
      }
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "functions": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/functionSpec" }
        },
        "externs": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "template": { "type": "string" },
              "encoding": { "type": "string" },
              "headers": { "type": "object" }
            }
          }
        }
      }
    }
  }
}
